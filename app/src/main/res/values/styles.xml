<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--//Activity右滑进出的动画，觉得这个不好看随便换成自己的-->
        <!--<item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>-->
    </style>

    <!-- for main -->
    <style name="MainAct" parent="AppTheme">
        <item name="colorPrimaryDark">@color/md_white</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <dimen name="bottomTabHeight">56dp</dimen>
    <dimen name="statusBarHeight">25dp</dimen>
    <dimen name="titleBarHeight">75dp</dimen>


</resources>
